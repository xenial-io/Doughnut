@page "/{handler?}"
@model Xenial.Doughnut.Frontend.Pages.HostAuthModel
@namespace Xenial.Doughnut.Frontend.Server.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard.Server</title>
    <base href="~/" />
    <link href="_content/MatBlazor/dist/matBlazor.css" rel="stylesheet" />
</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        <app>
            <component type="typeof(Xenial.Doughnut.Frontend.App)" render-mode="Server" />
        </app>

        <script src="_content/MatBlazor/dist/matBlazor.js"></script>
        <script src="_framework/blazor.server.js"></script>
    }
    else
    {
        <h3>You are not logged into this application.</h3>

        <p>
            <a href="/Login">Login</a>
        </p>
    }
</body>
</html>
