<DashboardResources />
<AppLayoutStyles />

<MatThemeProvider Theme="@DarkTheme">
    <Router AppAssembly="@typeof(FullLayout).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(FullLayout)">
                <NotAuthorized>
                    @if (!context.User.Identity.IsAuthenticated)
                    {
                        <RedirectToLogin />
                    }
                    else
                    {
                        <p>You are not authorized to access this resource.</p>
                    }
                </NotAuthorized>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(SmallLayout)">
                <p>Sorry, there's nothing at this address.</p>
            </LayoutView>
        </NotFound>
    </Router>
</MatThemeProvider>


@code { 
    MatTheme DarkTheme = new MatTheme()
    {
        Primary = "#FFFFFF",
        Secondary = "#333333",
    }; 
}
